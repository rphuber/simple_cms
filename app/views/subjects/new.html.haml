= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link')

.subjects.new
  %h2 Create Subject

  = form_for(:subject, :url => {:action => 'create'}) do |f|
    %table{:summary => 'Subject form fields'}
      %tr
        %th Name
        %td 
          = f.text_field(:name)
      %tr
        %th Position
        %td 
          = f.text_field(:position)
      %tr
        %th Visible
        %td 
          = f.text_field(:visible)
    .form-buttons
      =submit_tag("Create Subject")
    
  