.pages.index
  %h2 Pages

  = link_to("Add New Page", {:action => 'new'}, :class => 'action new')

  %table.listing{ :summary => "Page list" }
    %tr.header
      %th &nbsp;
      %th Page
      %th Visible
      %th Permalink
      %th Sections
      %th Actions

    - @pages.each do |page|
      %tr
        %td 
          =page.position
        %td 
          =page.name
        %td.center
          =page.visible ? 'Yes' : 'No'
        %td.center 
          =page.permalink
        %td.center
          =page.sections.size
        %td.actions
          = link_to("Show", {:action => 'show', :id => page.id}, :class => 'action show')
          = link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit')
          = link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete')
